<script>

    function loadDoc(data) {
        let st = new XMLHttpRequest();
        let shop =getCookie('shop')
        let url = "/updatepackage?plan="+data;
        st.open("GET", url, true);
        st.onreadystatechange = function () {
            if (st.readyState === 4 && st.status === 200) {
                var _response = this.responseText
              //  var collections = JSON.parse(_response)
             location.href = _response;
              console.log(_response)
            }
        };
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }
        st.send();
    }

</script>

